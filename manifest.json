{
    "manifest_version": 3,
    "name": "AI Multi-Chat",
    "version": "2.1",
    "description": "Control multiple Gemini Gems and ChatGPT GPTs in a split view, or mix them in a single view.",
    "icons": {
        "16": "ai_multi_chat_16x16.png",
        "48": "ai_multi_chat_48x48.png",
        "128": "ai_multi_chat_128x128.png"
    },
    "permissions": [
        "storage",
        "declarativeNetRequest",
        "activeTab"
    ],
    "host_permissions": [
        "https://gemini.google.com/*",
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://gemini.google.com/*"
            ],
            "js": [
                "custom-select.js",
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_end",
            "all_frames": true
        },
        {
            "matches": [
                "https://chat.openai.com/*",
                "https://chatgpt.com/*"
            ],
            "js": [
                "custom-select.js",
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset_1",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    }
}